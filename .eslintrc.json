{
  "parser": "babel-eslint",
  "plugins": [ "flowtype" ],
  "rules": {
    "valid-jsdoc": [
      1,
      { "prefer":
        {
          "arg": "param",
          "argument": "param",
          "return": "returns"
        }
      }
    ],
    "semi": [ 2, "never" ],
    "flowtype/space-after-type-colon": [ 1, "always" ],
    "flowtype/space-before-type-colon": [ 1, "never" ],
    "flowtype/type-id-match": [ 1, "^([A-Z][a-z0-9]+)+Type$" ]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}
