{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [ "flowtype" ],
  "env": {
    "node": true
  },
  "rules": {
    "flowtype/require-parameter-type": 1,
    "flowtype/require-return-type": [ 1, "always" ],
    "flowtype/space-after-type-colon": [ 1, "always" ],
    "flowtype/space-before-type-colon": [ 1, "never" ]
  }
}
